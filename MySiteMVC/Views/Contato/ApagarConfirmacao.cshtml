@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato(@Model.Nome)?</h3>
</div>
<div class="text-center" >
    <a class="btn btn-primary" role="button" asp-action="Index" >Cancelar Exclusão</a>
    <a class="btn btn-danger" role="button" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>
</div>


