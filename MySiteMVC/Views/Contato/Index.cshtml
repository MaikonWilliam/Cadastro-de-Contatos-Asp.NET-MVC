@model List<ContatoModel> ;
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">
    
    
    <h1 class="display-4 ">Listagem de Contatos</h1>
    
    <br/>
    <div class="d-grid gap-2 d-md-flex justify-content-nd-start" >
        <a class="btn btn-primary " role="button" asp-action="Criar">Adicionar Contato</a>
        <form method="post">
            <input type="text" placeholder="Insira o nome do contato" name="name"/>
            <input type="submit" value="Buscar" asp-action="Index"/>
        </form>     
     
    </div>

    <br/>

   <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">@Html.DisplayNameFor(model => model[0].Nome)</th>
      <th scope="col">@Html.DisplayNameFor(model => model[0].Email)</th>
      <th scope="col">@Html.DisplayNameFor(model => model[0].Celular)</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

   @if(Model!= null && Model.Any())
    {
        int i = 1;
        foreach(ContatoModel contato in Model)
        {
        <tr>  
           <th scope="row">@i</th>
           <td>@contato.Nome</td>
           <td>@contato.Email</td>
           <td>@contato.Celular</td>
           <td>
           <div class="btn-group" role="group">
              <a role="button" class="btn btn-primary" asp-action="Editar" asp-route-id= "@contato.Id">Editar</a>
              <a role="button" class="btn btn-danger" asp-action="ApagarConfirmacao" asp-route-id = "@contato.Id">Apagar</a>        
           </div>
           <td>
         </tr>
        i++;
        }
    }
     
  </tbody>
</table>
</div>

